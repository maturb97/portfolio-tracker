{
  "manifest_version": 3,
  "name": "Portfolio Price Fetcher",
  "version": "1.0",
  "description": "Bypass CORS for portfolio price fetching",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://query1.finance.yahoo.com/*",
    "https://api.coingecko.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://maturb97.github.io/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}